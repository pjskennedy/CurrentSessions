
<div class="devise-view">
  <div class="row">
    <div class="well col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      
      <div class="page-header">
        <h2>Current Sessions Admin <small>Edit</small></h2>
      </div>

      <hr/>

      <%= form_for(current_admin, :html => {:class => "form-horizontal", :role => "form"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        
        <%= devise_error_messages! %>

        <div class="form-group">
          <label for="name" class="col-lg-3 control-label">Name</label>
          <div class="col-lg-9">
            <%= f.text_field :name, :class => "form-control", :id => "name", :placeholder => "bob bobson" %>
          </div>
        </div>

        <div class="form-group">
          <label for="email" class="col-lg-3 control-label">Email</label>
          <div class="col-lg-9">
            <%= f.email_field :email, :class => "form-control", :id => "email", :placeholder => "bob@bob.bob" %>
          </div>
        </div>

        <hr/>

        <div class="col-lg-9 col-lg-offset-3">
          <small>Leave blank if you don't want to change </small>
        </div>

        <div class="form-group">
          <label for="password" class="col-lg-3 control-label">Password</label>
          <div class="col-lg-9">
            <%= f.password_field :password, :class => "form-control", :id => "password", :placeholder => "Password" %>
          </div>
        </div>

        <div class="form-group">
          <label for="password-confirmation" class="col-lg-3 control-label">Password Confirmation</label>
          <div class="col-lg-9">
            <%= f.password_field :password_confirmation, :class => "form-control", :id => "password-confirmation", :placeholder => "Password" %>
          </div>
        </div>

        <hr/>

        <div class="form-group">
          <label for="current-confirmation" class="col-lg-3 control-label">Password Confirmation</label>
          <div class="col-lg-9">
            <%= f.password_field :current_password, :class => "form-control", :id => "current-confirmation", :placeholder => "Current Password" %>
          </div>
          <small>(we need your current password to confirm your changes)</small>
        </div>


        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-5">
            <%= f.submit "Update", :class => "btn btn-default btn-block btn-primary", :type => "submit" %>
          </div>
          <div class="col-lg-5">
            <%= link_to :back, :class => "btn btn-default btn-block" do %>
              Back
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

        </div>
      <% end %>
    </div>
  </div>
</div>